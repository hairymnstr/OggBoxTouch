{
    "configurations": [
        {
            "name": "CPP Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/OggBoxTouch.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "debugServerArgs": "-f interface/stlink-v2.cfg -f target/stm32f4x.cfg",
            "serverLaunchTimeout": 2000,
            "filterStderr": true,
            "filterStdout": false,
            "stopAtConnect": false,
            "serverStarted": "Listening on port 3333 for gdb connections",
            "preLaunchTask": "",
            "setupCommands": [
                {
                    "text": "-target-select remote localhost:3333",
                    "description": "connect to target",
                    "ignoreFailures": false
                },
                {
                    "text": "load ${workspaceRoot}/build/OggBoxTouch.elf"
                },
            ],
            "logging": {
                "moduleLoad": true,
                "trace": true,
                "engineLogging": true,
                "programOutput": true,
                "exceptions": true
            },
            "linux": {
                "MIMode": "gdb",
                "MIDebuggerPath": "${env:ARM_GCC_PATH}/arm-none-eabi-gdb",
                "debugServerPath": "openocd"
            }
        }
    ]
}